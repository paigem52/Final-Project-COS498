<!-- Comments HBS -->
<!--==============-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comments Page</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    {{> nav }}

    <main>
        <h1>All Comments</h1>

        <!-- Display total number of comments -->
        <p>Total Comments: {{totalComments}}</p>

        <!-- Check if there are any comments -->
        {{#if comments.length}}
            <ul>
                <!-- Loop through each top-level comment -->
                {{#each comments}}
                    <li>
                        <strong>{{author_display_name}}</strong>: {{text}} ({{createdAt}})

                        <!-- Reply form for this comment -->
                        <form action="/comments" method="POST" style="display:inline;">
                            <input type="hidden" name="parent_id" value="{{id}}">
                            <input type="text" name="text" placeholder="Reply...">
                            <button type="submit">Reply</button>
                        </form>
                        
                        <!-- Nested replies, if any -->
                        {{#if replies.length}}
                            <ul>
                                {{#each replies}}
                                    <li>
                                        <strong>{{author_display_name}}</strong>: {{text}} ({{createdAt}})
                                        <!-- No nested reply form for replies (only one level) -->
                                    </li>
                                {{/each}}
                            </ul>
                        {{/if}}
                    </li>
                {{/each}}
            </ul>
        {{else}}
        <!-- Display if there are no comments -->
            <p>No comments yet.</p>
        {{/if}}

        <!-- Pagination -->
        {{#if totalPages}}
            <nav>
                <!-- Previous page link -->
                {{#if (gt currentPage 1)}}
                    <a href="/comments?page={{subtract currentPage 1}}">Previous</a>
                {{/if}}

                <!-- Current page info -->
                Page {{currentPage}} of {{totalPages}}
                
                <!-- Next page link -->
                {{#if (lt currentPage totalPages)}}
                    <a href="/comments?page={{add currentPage 1}}">Next</a>
                {{/if}}
            </nav>
        {{/if}}

    </main>

    {{> footer }}
</body>
</html>
